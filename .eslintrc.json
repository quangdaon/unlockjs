{
    "env": {
        "browser": true,
        "es6": true
    },
    "globals": {
        "module": true,
        "define": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "off",
        "eqeqeq": ["error", "always"],
	    "prefer-template": "error",
	    "operator-assignment": ["error", "always"],
	    "no-array-constructor": "error"
    }
}