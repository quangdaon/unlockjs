{
    "env": {
        "browser": true,
        "es6": true
    },
    "globals": {
        "module": true,
        "process": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "off"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-inner-declarations": "off",
        "no-constant-condition": "off"
    }
}